\pagestyle{fancy} % Set the page style for all other pages
\fancyhead{} % clear all header fields
\fancyhead[L]{First name, Last name} % Set Left side of header
\fancyhead[C]{Topic} % Set Center side of header
\fancyhead[R]{ID} % Set Right side of header
\fancyfoot{} % clear all footer fields
\fancyfoot[LE,RO]{\thepage} % Set Left side on Even page and Right side on Odd page



